void var(): {}
{
    <ID> [LOOKAHEAD(2) "[" [index()] "]"] [var1()]
}

void var1(): {}
{
  ("." | "->" | ".*" | "->*") <ID> [LOOKAHEAD(2) "[" [index()] "]"] [var2()]
}

void var2(): {}
{
  ("." | "->" | ".*" | "->*") <ID> [LOOKAHEAD(2) "[" [index()] "]"] [var3()]
}

void var3(): {}
{
  ("." | "->" | ".*" | "->*") <ID> [LOOKAHEAD(2) "[" [index()] "]"]
    (("." | "->" | ".*" | "->*") <ID> [LOOKAHEAD(2) "[" [index()] "]"])*
}


void index(): {}
