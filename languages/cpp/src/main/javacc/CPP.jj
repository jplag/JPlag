| "*="           { delegatingScanner.add(C_ASSIGN,token); }
| "/="           { delegatingScanner.add(C_ASSIGN,token); }
| "%="           { delegatingScanner.add(C_ASSIGN,token); }
| "+="           { delegatingScanner.add(C_ASSIGN,token); }
